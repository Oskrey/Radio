<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="1000dip" />
            <stroke android:width="3dip" android:color="#000000" />
            <gradient android:angle="90" android:startColor="#00BCD4"
                android:endColor="#71243E" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" >
            <corners android:radius="1000dip" />
            <stroke android:width="3dip" android:color="#9e3d1c" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="1000dp" />
            <stroke android:width="1dip" android:color="#FFC107" />
            <gradient android:angle="90" android:startColor="#0BA8BC"
                android:endColor="#DC3B71" />
        </shape>
    </item>
</selector>